{
  "name": "manifest-extension",
  "displayName": "Salesforce Manifest Helper",
  "description": "Retrieve and deploy members referenced in package XML files from/to the default Salesforce org.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:xml",
    "onCommand:sfdxManifest.retrieve",
    "onCommand:sfdxManifest.deploy"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p .",
    "test": "mocha -r ts-node/register test/**/*.test.ts",
    "watch": "tsc -w -p .",
    "pretest": "npm run compile"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.70.0",
    "chai": "^4.3.7",
    "mocha": "^10.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^4.7.0",
    "vscode": "^1.1.34"
  },
  "contributes": {
    "commands": [
      {
        "command": "sfdxManifest.retrieve",
        "title": "Retrieve selected member(s) from Org"
      },
      {
        "command": "sfdxManifest.deploy",
        "title": "Deploy selected member(s) to Org"
      },
      {
        "command": "sfdxManifest.generateTypes",
        "title": "Generate package.xml from selection"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceExtname == .xml",
          "command": "sfdxManifest.retrieve",
          "group": "navigation"
        },
        {
          "when": "resourceExtname == .xml",
          "command": "sfdxManifest.deploy",
          "group": "navigation"
        },
        {
          "when": "resourceExtname == .xml",
          "command": "sfdxManifest.generateTypes",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Salesforce Manifest Helper",
      "properties": {
        "manifestExtension.tempLocation": {
          "type": "string",
          "enum": [
            "workspace",
            "extensionStorage"
          ],
          "default": "workspace",
          "description": "Where temporary manifests are written. 'workspace' writes to <workspace>/.manifest-extension, 'extensionStorage' uses the extension's storage location."
        },
        "manifestExtension.stripStack": {
          "type": "boolean",
          "default": true,
          "description": "Strip 'stack' keys from CLI JSON output before showing in Output channel."
        }
      }
    }
  }
}
