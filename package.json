{
  "name": "manifest-extension",
  "displayName": "Salesforce Manifest Helper",
  "description": "Retrieve and deploy members referenced in package XML files from/to the default Salesforce org.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:xml",
    "onCommand:sfdxManifest.retrieve",
    "onCommand:sfdxManifest.deploy"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p .",
    "watch": "tsc -w -p .",
    "pretest": "npm run compile"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.70.0",
    "typescript": "^4.7.0",
    "vscode": "^1.1.37"
  },
  "contributes": {
    "commands": [
      {
        "command": "sfdxManifest.retrieve",
        "title": "Retrieve selected member(s) from Org (test)"
      },
      {
        "command": "sfdxManifest.deploy",
        "title": "Deploy selected member(s) to Org (test)"
      }
      ,
      {
        "command": "sfdxManifest.generateTypes",
        "title": "Generate package.xml from selection (test)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceExtname == .xml",
          "command": "sfdxManifest.retrieve",
          "group": "navigation"
        },
        {
          "when": "resourceExtname == .xml",
          "command": "sfdxManifest.deploy",
          "group": "navigation"
        }
        ,
        {
          "when": "resourceExtname == .xml",
          "command": "sfdxManifest.generateTypes",
          "group": "navigation"
        }
      ]
    }
  }
}
